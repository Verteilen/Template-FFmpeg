{
  "compilerOptions": {
    "target": "es5",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "removeComments": true,
    "noImplicitAny": false,
  },
  "exclude": ["./dist/**/*"]
}
